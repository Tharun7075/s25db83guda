extends layout

block content
  h1= title
  - let items = results
  p Below are some cakes search results:

  .container-fluid
    .row
      each quarry in items
        .col-sm-3.border.p-2
          h3 name: #{cakes.name}
          p flavors: #{cakes.flavors}
          p price: #{cakes.price}
          button.btn.btn-primary.mt-2(
            onclick=`dispatch('/cakes/update?id=${cakes._id}')`
          ) Update

  script.
    function dispatch(path) {
      window.location.href = path;
    }

  p
    a(href="/") Back to Home